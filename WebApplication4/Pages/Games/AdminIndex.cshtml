@page
@model WebApplication4.Pages.Games.AdminIndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div style="text-align: center;">
    <a asp-page="Create">Create New</a>
</div>

<table class="table table-striped table-bordered table-responsive table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Game[0].GameTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game[0].GameDescription)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Game)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameDescription)
            </td>
            <td>
                <a class="btn btn-outline-secondary btn-sm" asp-page="./Edit" asp-route-id="@item.GameId">Edit</a>
                <a class="btn btn-outline-secondary btn-sm" asp-page="./Delete" asp-route-id="@item.GameId">Delete</a>
                <a class="btn btn-outline-secondary btn-sm" asp-page="./GameAdd" asp-route-id="@item.GameId">Add Items</a>
            </td>
        </tr>
    }
    </tbody>
</table>